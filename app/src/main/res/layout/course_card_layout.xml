<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/spacing_size_large"
        android:background="#597E5D">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/testbook_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/course_title"
            android:layout_marginStart="@dimen/spacing_size_med"
            android:layout_marginTop="@dimen/spacing_size_med"
            android:src="@drawable/ic_testbook_select_logo"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/testbook_logo"
            app:layout_constraintStart_toStartOf="parent"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_large"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/spacing_size_med"
            android:layout_marginTop="@dimen/spacing_size_small"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/course_info_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/course_info_two"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/spacing_size_med"
            android:textSize="@dimen/font_size_med"
            android:layout_marginTop="@dimen/spacing_size_small"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/course_info_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/course_info_three"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_med"
            android:layout_marginStart="@dimen/spacing_size_med"
            android:layout_marginTop="@dimen/spacing_size_small"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/course_info_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_med"
            android:layout_marginStart="@dimen/spacing_size_med"
            android:layout_marginTop="@dimen/spacing_size_small"
            android:layout_marginBottom="@dimen/spacing_size_med"
    />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vrt"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_hrz"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/faculities_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            app:layout_constraintStart_toStartOf="@+id/guideline_vrt"
            app:layout_constraintTop_toTopOf="@+id/guideline_hrz"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"


    />

</androidx.constraintlayout.widget.ConstraintLayout>